// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String         @id @default(uuid())
  first_name    String
  last_name     String
  birth_date    String
  cep           String
  address       String
  city          String
  uf            String
  email         String         @unique
  password      String
  created_at    DateTime       @default(now())
  updated_at    DateTime       @updatedAt
  refresh_token RefreshToken[]
  customers     Customers[]
  invoices      Invoices[]

  @@map("users")
}

model RefreshToken {
  id        String @id @default(uuid())
  expiresIn Int
  user      User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String

  @@map("refresh_token")
}

model Customers {
  id         String     @id @default(uuid())
  first_name String
  last_name  String
  cep        String
  address    String
  city       String
  uf         String
  email      String
  phone      String
  created_at DateTime   @default(now())
  updated_at DateTime   @updatedAt
  invoices   Invoices[]
  user       User?      @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId     String?

  @@map("customers")
}

model Invoices {
  id             String  @id @default(uuid())
  description    String
  value          Decimal
  payment_method String
  due_date       String
  is_paid        Boolean

  user       User?      @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId     String?
  customers  Customers? @relation(fields: [customerId], references: [id], onDelete: SetNull)
  customerId String?

  @@map("invoices")
}
